@using Asp.Web.Common.Mvc.Alerts
@{
    var alerts = TempData.GetAlerts();
    if (alerts.Any())
    {
        <script type="text/javascript">
            $(function() {
                @foreach (var alert in alerts)
                {
                    <text>
                        window.alerts.showAlert({
                            message: '@alert.Message.Replace("'", "\\'")',
                            alertClass: '@alert.AlertClass'
                        });
                    </text>
                }
            });
        </script>
    }
}